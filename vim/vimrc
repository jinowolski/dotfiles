"echo '>^.^<'
nnoremap - ddp
nnoremap _ ddkP
inoremap <c-u> <esc>viwUea
nnoremap <c-u> viwUe

source ~/.vim/ez_scroll_mid.vim

source ~/.vim/personal.vim
