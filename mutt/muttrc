# character set on messages that we send
set send_charset="utf-8"
# if there is no character set given on incoming messages, it is probably windows
set assumed_charset="utf-8"

# make sure Vim knows mutt is a mail client and that we compose an UTF-8 encoded message
set editor="vim -c 'set syntax=mail ft=mail enc=utf-8'"

# just scroll one line instead of full page
set menu_scroll=yes

# we want to see some MIME types inline, see below this code listing for explanation
#auto_view application/msword
#auto_view application/pdf
auto_view text/html
alternative_order text/plain text

# make default search pattern to search in To, Cc and Subject
set simple_search="~f %s | ~C %s | ~s %s"

# threading preferences, sort by threads
set sort=threads
set strict_threads=yes

set include=yes

# show spam score (from SpamAssassin only) when reading a message
spam "X-Spam-Score: ([0-9\\.]+).*" "SA: %1"

set pager_format = " %C - %[%H:%M] %.20v, %s%* %?H? [%H] ?"
set pager_stop = yes

# do not show all headers, just a few
ignore          *
unignore        From To Cc Bcc Date Subject
# and in this order
unhdr_order     *
hdr_order       From: To: Cc: Bcc: Date: Subject:

# this file must exist, and contains your signature, comment it out if
# you don't want a signature to be used
set signature = ~/.signature
set sig_on_top = yes

# aliases (sort of address book)
#source ~/.aliases

# IMAP connection settings
set timeout=10
set mail_check=10
set imap_keepalive=300

# IMAP account settings
set folder=imaps://imap.gmail.com/
set spoolfile=+INBOX
set record=+INBOX
set postponed="+[Gmail]/Wersje robocze"

# use headercache for IMAP (make sure this is a directory for performance!)
set header_cache=~/.mutt_cache
set message_cachedir    = ~/.mutt/cache/bodies

# mailboxes we want to monitor for new mail
mailboxes "+INBOX"
mailboxes "+wait"
mailboxes "+archive"
mailboxes "+[Gmail]/Wys≈Çane"
mailboxes "+[Gmail]/Wersje robocze"
mailboxes "+[Gmail]/Spam"

# mailing lists we are on (these are regexps!)
#subscribe "gentoo-.*@gentoo\\.org"


set sidebar_visible=yes

set ispell="aspell -l pl -e -c"

set copy = yes

# Ctrl-n, Ctrl-p to select next, previous folder.
# Ctrl-o to open selected folder.
bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager \CO sidebar-open

# abook
set query_command= "abook --mutt-query '%s'"
macro index,pager  A "<pipe-message>abook --add-email-quiet<return>" "Add this sender to Abook"
macro index,pager  a "<save-message>+archive<return><return>" "Save message to 'archive'"

macro index b '<enter-command>toggle sidebar_visible<enter><refresh>'
macro pager b '<enter-command>toggle sidebar_visible<enter><redraw-screen>'
bind index B bounce-message

bind editor        <Tab> complete-query

set pipe_decode = yes

set index_format = "%4C%Z %[%a %d.%m %H:%M] %-15.15L (%5l) %s"
set tilde = yes

source ~/.mutt/personal
source ~/.mutt/colors
